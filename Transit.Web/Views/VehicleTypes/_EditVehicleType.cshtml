@model Transit.Web.Models.VehicleTypeViewModel

<div class="col-md-12">
    <div class="panel panel-default card-view">
        <div class="panel-wrapper collapse in">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-wrap">
                            <form action="EditVehicleType" method="post" class="form-horizontal">
                                <input type="hidden" name="ID" id="VehicleTypeID" value="@Model.ID">
                                <div class="form-body">
                                    <h6 class="txt-dark capitalize-font"><i class="fa fa-truck mr-10"></i> @Model.Title</h6>
                                    <hr>
                                    <!-- /Row -->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">Vehile Type Name</label>
                                                <div class="input-group col-md-9">
                                                    <input type="text" class="form-control" required="" name="Name" placeholder="Name" id="VehicleTypeName" value="@Model.Name">
                                                    <div class="input-group-addon"><i class="ti-truck"></i></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">Status</label>
                                                <div class="checkbox checkbox-success col-md-9">
                                                    @if (Model.IsActive)
                                                    {
                                                        <input data-val="true" name="IsActive" id="IsActive" value="true" type="checkbox" checked>
                                                        <label for="IsActive"> IsActive</label>
                                                        <input name="IsActive" type="hidden" value="false">
                                                    }
                                                    else
                                                    {
                                                        <input data-val="false" name="IsActive" id="IsActive" value="false" type="checkbox">
                                                        <label for="IsActive"> IsActive</label>
                                                        <input name="IsActive" type="hidden" value="false">
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions mt-10">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="col-md-offset-3 col-md-9">
                                                    <button type="submit" class="btn btn-success btn-lable-wrap left-label"> <span class="btn-label"><i class="fa fa-check"></i> </span><span class="btn-text">Save</span></button>
                                                    <button id="CancelEditVehicleType" type="button" class="btn btn-warning btn-lable-wrap left-label"> <span class="btn-label"><i class="fa fa-times"></i> </span><span class="btn-text">Cancel</span></button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6"> </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $("#CancelEditVehicleType").click(function () {
            $("#VehicleTypeForm").slideUp(function () {
                $("#AddVehicleTypeRow").slideDown();
            });
    });



</script>